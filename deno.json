{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@hyperpolymath/sparkle-ssg",
  "version": "0.2.0",
  "exports": "./src/Main.res.js",
  "tasks": {
    "build": "deno run -A npm:rescript build",
    "watch": "deno run -A npm:rescript build -w",
    "start": "deno run --allow-all src/Main.res.js",
    "dev": "deno run --watch --allow-all src/Main.res.js",
    "test": "deno test tests/ --allow-read --allow-run",
    "ci": "deno task build && deno task test"
  },
  "nodeModulesDir": "none",
  "lint": {
    "include": ["adapters/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "no-unused-vars",
        "no-explicit-any",
        "eqeqeq"
      ],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "include": ["adapters/"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "test": {
    "include": ["tests/"]
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  }
}
